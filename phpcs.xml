<?xml version="1.0"?>
<ruleset name="MyProject">
  <description>PSR-12 стандарт с исключениями для tests</description>

  <file>app</file>
  <file>routes</file>
  <file>database</file>
  <file>tests</file>

  <rule ref="PSR12"/>

  <arg name="report" value="summary"/>
  <arg name="tab-width" value="4"/>

  <!-- Отключаем CamelCaps метод/функции в тестах (несколько sniff'ов на всякий случай) -->
  <rule ref="Generic.NamingConventions.CamelCapsFunctionName">
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>tests/*</exclude-pattern>
  </rule>
  <rule ref="PSR1.Methods.CamelCapsMethodName">
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>tests/*</exclude-pattern>
  </rule>
</ruleset>
